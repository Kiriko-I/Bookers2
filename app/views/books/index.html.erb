<%= render 'users/user', books: @book %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <label>Title</label><br>
  <%= f.text_field :title %><br>
  <label>Opinion</label><br>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %><br>
<% end %>

<p>※Newbookは、公開用User infoとともにサイドバーで共通に記載する。</p>

<h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th> </th>
        <th>Title</th>
        <th>Opnion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.profile_image %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>