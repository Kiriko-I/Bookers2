<!--部分テンプレートの挿入-->

<h2>New book</h2>
  <%= form_with model: @book, method: :post do |f| %>
    <div>
      <label>Title</label></div>
      <%= f.text_field :title %>
    <div>
      <label>Body</label></div>
      <%= f.text_area :body %>
    <div><%= f.submit 'Create Book' %></div>
  <% end %>

<h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th>　</th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= link_to '（仮）' %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>