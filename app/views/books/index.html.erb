<h2>User info</h2>
  <% if user.profile_image.attached? %>
    <%= image_tag profile_image.image, size: "80x80" %>
  <% else %>
    <%= image_tag 'no_image', size: "80x80" %>
  <% end %>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>introduction</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<% form_with model: @book do |f| %>
  <label>Title</label><br>
  <%= f.text_field :title %><br>
  <label>Opinion</label><br>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %><br>
<% end %>

<p>※Newbookは、公開用User infoとともにサイドバーで共通に記載する。</p>

<h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th> </th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <%= @books.each do |book| %>
      <tr>
        <td><%= book.profile_image %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>