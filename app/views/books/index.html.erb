<%= render 'users/user', user: @user %>

<h2>New book</h2>
  <%= form_with model: @book, method: :post do |f| %>
    <div>
      <label>Title</label></div>
      <%= f.text_field :title %>
    <div>
      <label>Body</label></div>
      <%= f.text_area :body %>
    <div><%= f.submit 'Create Book' %></div>
  <% end %>

<h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th>ã€€</th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <% if book.user.profile_image.attached? %>
            <%= image_tag book.user.profile_image, size: "80x80" %>
          <% else %>
            <%= image_tag 'no_image', size: "80x80" %>
          <% end %><br>
          <%= link_to book.user.name, user_path(book.user.id) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>