<!--部分テンプレートの挿入-->

<h2>New book</h2>
  <%= form_with model: @book, method: :post do |f| %>
    <div>
      <label>Title</label></div>
      <%= f.text_field :title %>
    <div>
      <label>Body</label></div>
      <%= f.text_area :body %>
    <div><%= f.submit 'Create Book' %></div>
  <% end %>
  
<p>※Newbookは、公開用User infoとともにサイドバーで共通に記載する。</p>

<h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th>　</th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag @book.user_id.get_image, size: "80x80" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>