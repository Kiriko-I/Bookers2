<% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="row">
  <div class="col-sm-12 col-mid-8 col-lg-5 px5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
    <%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>
    <div class="form-group">
      <label>Title</label><br>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <label>Opinion</label><br>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <input type="submit" name="commit" value="Update Book" class="btn bg-success text-white mb-3">
    </div>
      <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
    <% end %>
  </div>
</div>
