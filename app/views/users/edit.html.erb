<% if @user.errors.any? %>
<h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
<ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>
<div class="row">
  <div class="col-sm-12 col-mid-8 col-lg-5 px5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @user, url:update_user_path(@user.id), method: :patch do |f| %>
    <div class="form-group">
      <label>Name</label><br>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <label>Image</label><br>
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
    <div class="form-group">
      <label>Introduction</label><br>
      <%= f.text_area :introduction %>
    </div>
    <div class="actions">
      <input type="submit" name="commit" value="Update User" class="btn bg-secondary text-white mb-3">
    </div>
    <% end %>
  </div>
</div>