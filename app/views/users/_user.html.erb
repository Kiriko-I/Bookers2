<h2>User info</h2>
  <% if user.profile_image.attached? %>
    <%= image_tag user.profile_image, size: "80x80" %>
  <% else %>
    <%= image_tag 'no_image', size: "80x80" %>
  <% end %>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>