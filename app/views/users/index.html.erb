<h2>User info</h2>
  <% if @user.profile_image.attached? %>
    <%= image_tag user.profile_image, size: "80x80" %>
  <% else %>
    <%= image_tag 'no_image', size: "80x80" %>
  <% end %>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<%= link_to "⚙", edit_user_path(user.id) %><h2>Users</h2>
<!--実験中-->
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.profile_image.attached? %>
            <%= image_tag user.profile_image, size: "80x80" %>
          <% else %>
            <%= image_tag 'no_image', size: "80x80" %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to 'show', user_path(user.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>