<%= render "users/user", user: @user %>

<%= render "books/book", book: @book %>

<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <% if user.profile_image.attached? %>
          <%= image_tag user.profile_image, size: "80x80" %>
        <% else %>
          <%= image_tag 'no_image', size: "80x80" %>
        <% end %>
      </td>
      <td><%= user.name %></td>
      <td><%= link_to 'show', user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>